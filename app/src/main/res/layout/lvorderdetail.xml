<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="110dp"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/img_od_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/tv_od_name"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_toEndOf="@+id/img_od_product"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_od_size"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_od_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/img_od_product"
        android:paddingStart="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_od_quantity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_od_name"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_od_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_od_quantity"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:textColor="@color/red_color"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>